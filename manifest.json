{
  "manifest_version": 3,
  "name": "SideFlow \u2013 Side Panel Launcher",
  "version": "1.0.0",
  "description": "Open any site in Chrome\u2019s Side Panel. Choose per\u2011tab or global. Favorites & filter. Close all global panels.",
  "permissions": [
    "sidePanel",
    "tabs",
    "storage"
  ],
  "host_permissions": [
    "https://*/*",
    "http://*/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_title": "SideFlow"
  },
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  }
}
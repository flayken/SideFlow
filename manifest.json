{
  "manifest_version": 3,
  "name": "SideFlow",
  "version": "1.5.0",
  "description": "Open any site in the Chrome side panel \u2014 per\u2011tab or global \u2014 plus favorites and quick management.",
  "action": {
    "default_title": "SideFlow",
    "default_popup": "popup.html"
  },
  "permissions": [
    "sidePanel",
    "storage",
    "tabs",
    "activeTab"
  ],
  "host_permissions": [
    "*://*/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "64": "icons/icon64.png",
    "128": "icons/icon128.png",
    "256": "icons/icon256.png"
  },
  "side_panel": {
    "default_path": "fallback.html"
  }
}